{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@abi/*": ["abi/*"],
      "@model": ["model"],
      "@shared/*": ["shared/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"],
      "@validation/*": ["validation/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
